<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.android.gms.samples.vision.barcodereader.ModifyInformation">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <TextView
        android:id="@+id/displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="20dp"
        android:text="" />

    <TextView
        android:id="@+id/displayCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/displayName"
        android:layout_marginTop="25dp"
        android:text="" />

    <TextView
        android:id="@+id/displayPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/displayCompany"
        android:layout_marginTop="25dp"
        android:text="" />

    <TextView
        android:id="@+id/displayPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/displayPosition"
        android:layout_marginTop="25dp"
        android:text="" />

    <EditText
        android:id="@+id/inputComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayPhone"
        android:layout_marginTop="25dp"
        android:hint="@string/add_comment" />

    <TextView
        android:id="@+id/displayComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputComment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="" />

    <TextView
        android:id="@+id/displayTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayComment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="" />

    <TextView
        android:id="@+id/displayAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Author: admin" />


   <Button
       android:id="@+id/addComment"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/displayAuthor"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="25dp"
       android:text="Add Comment"
       android:visibility="visible" />

    <Button
        android:id="@+id/discard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="invisible"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignTop="@+id/addComment"
        android:layout_toLeftOf="@+id/addComment"
        android:layout_toStartOf="@+id/addComment" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/addComment"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/addComment"
        android:layout_toRightOf="@+id/addComment"
        android:text=""
        android:visibility="invisible" />


</RelativeLayout>
