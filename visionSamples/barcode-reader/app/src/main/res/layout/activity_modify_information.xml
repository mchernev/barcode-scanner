<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.google.android.gms.samples.vision.barcodereader.ModifyInformation">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

        <TextView
            android:id="@+id/displayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="name" />

        <TextView
            android:id="@+id/displayCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/displayName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="company" />

        <TextView
            android:id="@+id/displayPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/displayCompany"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="position" />

        <TextView
            android:id="@+id/displayPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/displayPosition"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="phone" />

        <EditText
            android:id="@+id/inputComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/displayPhone"
            android:layout_marginTop="25dp"
            android:hint="@string/add_comment" />

        <TextView
            android:id="@+id/displayComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputComment"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="" />

        <TextView
            android:id="@+id/displayTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/displayComment"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="time" />

        <TextView
            android:id="@+id/displayAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/displayTime"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="author" />


        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_below="@+id/displayAuthor"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp" />

        <Button
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:layout_below="@+id/displayAuthor"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
</ScrollView>
